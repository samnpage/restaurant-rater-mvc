@model List<RatingListItem>
@{
    var names = new string[] {"Anonymous", "Brianne", "Edwin", "Garrett", "Isaac", "Jackson", "Marla", "Shelby"};
    Random rng = new();
    names = names.OrderBy(_ => rng.Next()).ToArray();
}
<div class="row mb-4 g-3">
    @foreach (var rating in Model)
    {
        <div class="col-6 col-sm-3 text-center">
            <span class="text-warning" title="@rating.Score">
                @for (int i = 0; i < 5; i++)
                {
                    if (rating.Score - i >= 1)
                    {
                        <i class="bi bi-star-fill"></i>
                    }
                    else if (rating.Score - i > 0)
                    {
                        <i class="bi bi-star-half"></i>
                    }
                    else
                    {
                        <i class="bi bi-star"></i>
                    }
                }
            </span>
            <div class="text-muted fst-italic text-center"> - @names[Model.IndexOf(rating) % names.Length]</div>
        </div>
    }
</div> 

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">